@inject IPostService PostService

<h3 class="text-center scoring">
  <button class="btn btn-link btn-lg p-0 d-block mx-auto" @onclick="UpVote">
    <i class="oi oi-chevron-top"></i>
  </button>
  <span class="d-block mx-auto"> @Model.Score </span> 
  <button class="btn btn-link btn-lg p-0 d-block mx-auto" @onclick="DownVote">
    <i class="oi oi-chevron-bottom"></i>
  </button>
</h3>

@code {

  [Parameter]
  public int Id { get; set; }

  private int Score = 0;

  public PostModel Model = new PostModel();

  protected override async Task OnInitializedAsync()
  {
    Model = await PostService.GetSingle(Endpoints.PostsEndpoint, Id);
  }

  private void DownVote()
  {
    Model.Score--;
  }

  private void UpVote()
  {
    Model.Score++;
  }
}