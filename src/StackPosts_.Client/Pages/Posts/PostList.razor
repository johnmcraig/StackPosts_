@inherits PostBase
@page "/posts"

<a href="/posts/create/" class="btn btn-primary p-2 m-2">
    <span class="oi oi-pencil"></span> 
    Add A Post
</a>
@if (PostModelList == null)
{
    <p>Loading data...</p>
}
else
{
    @foreach (var post in PostModelList)
    {
        <li class="card container p-2 m-2">
            <div class="card-body row">
                @*                 @if (PostModelList != null) *@
                @*                 { *@
                @*                     <PostScore PostModel="PostModel"/> *@
                @*                 } *@
                @*                 else *@
                @*                 { *@
                @*                     <h3> *@
                @*                       <span>0</span>   *@
                @*                     </h3> *@
                @*                 } *@
                <h3 class="text-center">
                    @*<button class="btn btn-link btn-lg p-0 d-block mx-auto" @onclick="UpVote">
                        <i class="oi oi-chevron-top"></i>
                    </button>*@
                    <span class="d-block mx-auto"> @post.Score </span>
                    @*<button class="btn btn-link btn-lg p-0 d-block mx-auto" @onclick="DownVote">
                        <i class="oi oi-chevron-bottom"></i>
                    </button>*@
                </h3>

                <div class="col-11">
                    <h5 class="card-title">@post.Title</h5>
                    <p>@post.Body</p>
                    <a href="/posts/details/@post.Id" class="card-link">
                        View post
                        <span class="badge badge-success">replies: @post.Replies.Count()</span>
                    </a>
                </div>
            </div>
        </li>
    }
}